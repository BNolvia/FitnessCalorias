            android:name="com.example.berenice.fitness.Cerveza">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.example.berenice.fitness.Chocolate">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.example.berenice.fitness.CocaCola">
        </activity>

        <activity
            android:screenOrientation="portrait"
