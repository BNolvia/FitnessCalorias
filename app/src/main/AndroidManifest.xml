        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.berenice.fitness.CongratulationsActivity">
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.berenice.fitness.InstructionsActivity">
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.berenice.fitness.CreditsActivity">
        </activity>

